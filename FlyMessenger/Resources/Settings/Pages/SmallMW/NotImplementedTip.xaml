<Page x:Class="FlyMessenger.Resources.Settings.Pages.SmallMW.NotImplementedTip"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FlyMessenger.Resources.Settings.Pages.SmallMW"
      xmlns:language="clr-namespace:FlyMessenger.Resources.Languages"
      mc:Ignorable="d">
    <Border x:Name="NotImplementedTipContent"
            Width="100"
            Height="40"
            Background="#000000"
            Opacity="0.65"
            CornerRadius="5">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{x:Static language:lang.unable}"
                   TextAlignment="Center"
                   FontSize="12"
                   FontFamily="{StaticResource Alata}"
                   Foreground="#FFFFFF" />
    </Border>
</Page>